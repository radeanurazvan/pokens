@page
@model Pokens.Pokedex.Office.Pages.Pokemons.ChangeAbilitiesModel
@{
    ViewData["Title"] = "ChangeAbilities";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>Change Abilities To @Model.PokemonChosen.Name</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Pokemon.Abilities" class="control-label"></label>
                @Html.DropDownListFor(m => m.Pokemon.Abilities, Model.Abilities, new { @class = "form-group", multiple = "true" })
                <span asp-validation-for="Pokemon.Abilities" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Change Abilities" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="/Pokemons/All">Back to List</a>
</div>
