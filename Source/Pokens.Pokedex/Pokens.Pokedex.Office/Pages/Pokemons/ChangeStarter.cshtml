@page
@model Pokens.Pokedex.Office.Pages.Pokemons.ChangeStarterModel
@{
    ViewData["Title"] = "ChangeStarter";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Change IsStarter To @Model.PokemonChosen.Name</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="submit" value="Change Is Starter from @Model.PokemonChosen.IsStarter" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="/Pokemons/All">Back to List</a>
</div>